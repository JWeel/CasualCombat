<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="admin.cozycombat" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/avatar"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TitlePage"
            android:label="@string/title_activity_title_page"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayPage"
            android:label="@string/title_activity_play_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ShopPage"
            android:label="@string/title_activity_shop_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".LeaderboardPage"
            android:label="@string/title_activity_leaderboard_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".InfoPage"
            android:label="@string/title_activity_info_page" >
        </activity>
    </application>

</manifest>
