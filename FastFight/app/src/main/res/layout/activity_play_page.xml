<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="admin.readpub.PlayPage"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#222222"
    android:orientation="vertical"
    android:weightSum="3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#123456"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal"
        android:padding="4dip"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#345678"
            android:gravity="center"
            android:text="Foe1"
            android:id="@+id/foe1"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#345678"
            android:gravity="center"
            android:text="Foe2"
            android:id="@+id/foe2"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#345678"
            android:gravity="center"
            android:text="Foe3"
            android:id="@+id/fo3"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#345678"
            android:gravity="center"
            android:text="Foe4"
            android:id="@+id/fo4"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#345678"
            android:gravity="center"
            android:text="Foe5"
            android:id="@+id/foe5"
            android:layout_weight="1"
            />

    </LinearLayout>
    <Space
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#654321"
        android:layout_weight="1"
        android:padding="4dip"
        >

        <ImageView
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:id="@+id/charIcon"
            />

        <TextView
            android:layout_width="80dip"
            android:layout_height="20dip"
            android:text="ABCDEFGHW"
            android:layout_toRightOf="@id/charIcon"
            android:layout_toEndOf="@id/charIcon"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dip"
            android:layout_marginStart="4dip"
            android:typeface="monospace"
            android:id="@+id/charName"
            />
        <ImageView
            android:layout_width="80dip"
            android:layout_height="8dip"
            android:layout_toRightOf="@id/charIcon"
            android:layout_toEndOf="@id/charIcon"
            android:layout_below="@id/charName"
            android:layout_marginTop="2dip"
            android:layout_marginLeft="4dip"
            android:layout_marginStart="4dip"
            android:background="#00FF00"
            android:id="@+id/charHealth"
            />
        <ImageView
            android:layout_width="80dip"
            android:layout_height="8dip"
            android:layout_toRightOf="@id/charIcon"
            android:layout_toEndOf="@id/charIcon"
            android:layout_below="@id/charHealth"
            android:layout_marginTop="2dip"
            android:layout_marginLeft="4dip"
            android:layout_marginStart="4dip"
            android:background="#0000FF"
            android:id="@+id/charMagic"
            />
        <TextView
            android:layout_width="80dip"
            android:layout_height="18dip"
            android:text="LEVEL 999"
            android:layout_toRightOf="@id/charIcon"
            android:layout_toEndOf="@id/charIcon"
            android:layout_below="@id/charMagic"
            android:layout_marginTop="2dip"
            android:layout_marginLeft="4dip"
            android:layout_marginStart="4dip"
            android:background="#FFFFFF"
            android:typeface="monospace"
            android:id="@+id/charLevel"
            />

        <TextView
            android:layout_width="60dip"
            android:layout_height="20dip"
            android:text="STR 50"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:typeface="monospace"
            android:id="@+id/charStrength"
            />
        <TextView
            android:layout_width="60dip"
            android:layout_height="18dip"
            android:text="DEF 99"
            android:layout_below="@id/charStrength"
            android:layout_marginTop="2dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#FFFFFF"
            android:typeface="monospace"
            android:id="@+id/charDefense"
            />
        <TextView
            android:layout_width="60dip"
            android:layout_height="18dip"
            android:text="SPD 2"
            android:layout_below="@id/charDefense"
            android:layout_marginTop="2dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#FFFFFF"
            android:typeface="monospace"
            android:id="@+id/charSpeed"
            />

        <Button
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:text="New Button"
            android:id="@+id/attackButton"
            android:layout_alignParentBottom="true"
            />

        <Button
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:text="New Button"
            android:id="@+id/spellButton"
            android:layout_toRightOf="@id/attackButton"
            android:layout_toEndOf="@id/attackButton"
            android:layout_alignParentBottom="true"
            />

        <Button
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:text="New Button"
            android:id="@+id/itemButton"
            android:layout_toRightOf="@id/spellButton"
            android:layout_toEndOf="@id/spellButton"
            android:layout_alignParentBottom="true"
            />

        <Button
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:text="New Button"
            android:id="@+id/defendButton"
            android:layout_toRightOf="@id/itemButton"
            android:layout_toEndOf="@id/itemButton"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>
    <Space
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#987654"
        android:layout_weight="1"
        android:padding="4dip"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="LOREM IPSUM"
            />

    </RelativeLayout>

</LinearLayout>
